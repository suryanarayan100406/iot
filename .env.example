# Database
MYSQL_HOST=your.mysql.host
MYSQL_PORT=3306
MYSQL_USER=dbuser
MYSQL_PASSWORD=dbpass
MYSQL_DATABASE=fence_db

# API Token (shared with devices/bridge)
API_TOKEN=replace_with_api_token

# Firebase Admin (service account)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-client@project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# JWT secret for admin auth
JWT_SECRET=replace_with_jwt_secret

# Client-side Firebase (for realtime reads)
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
NEXT_PUBLIC_FIREBASE_API_KEY=your-public-api-key

# Optional
ALLOWED_ORIGIN=https://your-frontend.vercel.app
